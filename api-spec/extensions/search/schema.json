{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "stac-search-extension.json#",
  "title": "Search Extension",
  "type": "object",
  "description": "STAC Search Extension",
  "allOf": [
    {
      "$ref": "#/definitions/search_metadata"
    }
  ],
  "definitions": {
    "search_metadata": {
      "type": "object",
      "required": [
        "search:metadata"
      ],
      "properties": {
        "search:metadata": {
          "type": "object",
          "required": [
            "next",
            "returned"
          ],
          "properties": {
            "next": {
              "type": ["string", "null"]
            },
            "limit": {
              "type": ["integer", "null"],
              "minimum": 0
            },
            "found": {
              "type": "integer",
              "minimum": 0
            },
            "returned": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    }
  }
}
